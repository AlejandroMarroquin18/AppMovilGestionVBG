<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.agenda.crear_queja.CrearQueja">
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
    <include
        android:id="@+id/includeReporta"
        layout="@layout/fragment_crear_queja_reporta"/>
    <include
        android:id="@+id/includeAfectada"
        layout="@layout/fragment_crear_queja_afectada"/>
    <include
        android:id="@+id/includeAgresor"
        layout="@layout/fragment_crear_queja_agresor"/>
    <include
        android:id="@+id/includeAdicional"
        layout="@layout/fragment_crear_queja_adicionales"/>
        <Button
            android:id="@+id/btnCrear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear"
            android:layout_weight="0"
            android:layout_marginTop="16dp"
            />
        <Button
            android:id="@+id/btnReiniciar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reiniciar"
            android:layout_weight="0"
            android:layout_marginTop="16dp"
            />
    </LinearLayout>
    </ScrollView>

</FrameLayout>