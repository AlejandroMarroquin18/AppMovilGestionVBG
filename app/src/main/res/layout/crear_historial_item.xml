<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:gravity="center">

        <!-- Contenedor de los textos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Fecha -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha"
                android:textStyle="bold"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/fechaCreateText"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:textSize="14sp"
                android:background="@drawable/edittext_rounded"
                android:text="30/9/2025"

                android:inputType="none"
                 />
            <!-- Tipo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo:"
                android:textStyle="bold"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/tipoCreateText"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="@drawable/edittext_rounded"
                android:textSize="14sp"
                android:text="Tipo: holaaa, descc"
                />

            <!-- Descripción -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripción:"
                android:textStyle="bold"
                android:textSize="14sp" />



            <EditText
                android:id="@+id/descripcionCreateText"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:textSize="14sp"
                android:text="placeholder"
                android:background="@drawable/edittext_rounded"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/crearRegistroButton"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Crear Registro"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/red"
                    android:textColor="@color/white"
                    android:layout_marginEnd="8dp"
                    style="@style/Widget.Material3.Button"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cancelarCrearRegistroButton"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Cancelar"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/red"
                    android:textColor="@color/white"
                    android:layout_marginEnd="8dp"
                    style="@style/Widget.Material3.Button"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
