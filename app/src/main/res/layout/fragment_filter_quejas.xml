<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- TÃ­tulo de filtros -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ” FILTRAR QUEJAS"
        android:textColor="@color/red"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"/>

    <!-- Buscar por cÃ³digo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            app:cardCornerRadius="12dp"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp">

            <EditText
                android:id="@+id/searchQuejaText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Buscar por cÃ³digo"
                android:inputType="text"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@android:color/white"
                android:textSize="14sp"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="56dp"
            android:layout_height="48dp"
            app:cardCornerRadius="12dp"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp"
            android:layout_marginStart="8dp">

            <Button
                android:id="@+id/searchQuejaButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ðŸ”"
                android:textSize="20sp"
                android:textColor="@color/red"
                android:background="@android:color/white"
                android:padding="0dp"
                android:includeFontPadding="false"/>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Filtros en una fila horizontal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <!-- Sede -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ¢ Sede"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:cardCornerRadius="12dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp">

                <Spinner
                    android:id="@+id/sedeQuejaSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:background="@android:color/white"
                    android:textSize="14sp"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Tipo -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginHorizontal="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“‹ Tipo"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:cardCornerRadius="12dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp">

                <Spinner
                    android:id="@+id/tipoQuejaSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:background="@android:color/white"
                    android:textSize="14sp"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Facultad -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ“ Facultad"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:cardCornerRadius="12dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp">

                <Spinner
                    android:id="@+id/facultadQuejaSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:background="@android:color/white"
                    android:textSize="14sp"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>