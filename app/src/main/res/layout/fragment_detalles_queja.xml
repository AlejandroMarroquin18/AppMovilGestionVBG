<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.quejas.detalles.DetallesQueja">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/white">

            <!-- Header con t铆tulo -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/red"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DETALLES DE QUEJA"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvQuejaId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:text="ID: #12345"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Secci贸n: Persona que Reporta -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" PERSONA QUE REPORTA"
                        android:textColor="@color/red"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <include
                        android:id="@+id/includeReporta"
                        layout="@layout/queja_reporta_detalles_fragment"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Secci贸n: Persona Afectada -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" PERSONA AFECTADA"
                        android:textColor="@color/red"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <include
                        android:id="@+id/includeAfectada"
                        layout="@layout/queja_afectada_detalles_fragment"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Secci贸n: Agresor -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" AGRESOR"
                        android:textColor="@color/red"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <include
                        android:id="@+id/includeAgresor"
                        layout="@layout/queja_agresor_detalles_fragment"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Secci贸n: Informaci贸n Adicional -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" INFORMACIN ADICIONAL"
                        android:textColor="@color/red"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <include
                        android:id="@+id/includeAdicionales"
                        layout="@layout/queja_adicionales_detalles_fragment"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Botones de acci贸n -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/editButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Editar"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/red"
                    android:textColor="@color/white"
                    android:layout_marginEnd="8dp"
                    style="@style/Widget.Material3.Button"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cancelButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Cancelar"
                    android:visibility="gone"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/red"
                    android:textColor="@color/white"
                    android:layout_marginEnd="8dp"
                    style="@style/Widget.Material3.Button"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/deleteButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Eliminar"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/red"
                    android:textColor="@color/white"
                    android:layout_marginEnd="8dp"
                    style="@style/Widget.Material3.Button"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnImprimir"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Imprimir"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/red"
                    app:strokeWidth="1dp"
                    app:backgroundTint="@android:color/transparent"
                    android:textColor="@color/red"
                    android:layout_marginStart="8dp"
                    style="@style/Widget.Material3.Button.OutlinedButton"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>