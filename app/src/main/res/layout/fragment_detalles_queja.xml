<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.quejas.detalles.DetallesQueja">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/white">


            <!-- Header con t铆tulo -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/red"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DETALLES DE QUEJA"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvQuejaId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:text="ID: #12345"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Fila 1: Estado actual -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estado Actual"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/estadoActualTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" En Proceso"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- Fila 2: Cambiar a (spinner) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cambiar a"
                        android:textSize="14sp"
                        android:layout_marginEnd="8dp" />

                    <Spinner
                        android:id="@+id/spinnerEstado"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:spinnerMode="dropdown" />
                </LinearLayout>

                <!-- Pregunta -->
                <TextView
                    android:id="@+id/cambioEstadoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="驴Quieres cambiar el estado de esta queja?"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp" />

                <!-- Botones -->
                <LinearLayout
                    android:id="@+id/opcionesEstadosContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/guardarEstadoButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S铆, guardar"
                        android:textAllCaps="false"
                        android:backgroundTint="@android:color/holo_red_dark"
                        android:textColor="@android:color/white"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/cancelarEstadoButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No, cancelar"
                        android:textAllCaps="false"
                        android:backgroundTint="@android:color/holo_red_dark"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </LinearLayout>


            <!-- Secci贸n: Persona que Reporta -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" PERSONA QUE REPORTA"
                        android:textColor="@color/red"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <include
                        android:id="@+id/includeReporta"
                        layout="@layout/queja_reporta_detalles_fragment"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Secci贸n: Persona Afectada -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" PERSONA AFECTADA"
                        android:textColor="@color/red"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <include
                        android:id="@+id/includeAfectada"
                        layout="@layout/queja_afectada_detalles_fragment"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Secci贸n: Agresor -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" AGRESOR"
                        android:textColor="@color/red"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <include
                        android:id="@+id/includeAgresor"
                        layout="@layout/queja_agresor_detalles_fragment"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Secci贸n: Informaci贸n Adicional -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" INFORMACIN ADICIONAL"
                        android:textColor="@color/red"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <include
                        android:id="@+id/includeAdicionales"
                        layout="@layout/queja_adicionales_detalles_fragment"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"
                app:cardElevation="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="锔锔 HISTORIAL Y SEGUIMIENTO"
                        android:textColor="@color/red"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/createHistButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Crear registro"
                        app:cornerRadius="12dp"
                        app:backgroundTint="@color/red"
                        android:textColor="@color/white"
                        android:layout_marginEnd="8dp"
                        style="@style/Widget.Material3.Button"/>
                    <include
                        android:id="@+id/includeHistorial"
                        android:visibility="gone"
                        layout="@layout/crear_historial_item"
                        />




                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Botones de acci贸n -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/editButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Editar"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/red"
                    android:textColor="@color/white"
                    android:layout_marginEnd="8dp"
                    style="@style/Widget.Material3.Button"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cancelButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Cancelar"
                    android:visibility="gone"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/red"
                    android:textColor="@color/white"
                    android:layout_marginEnd="8dp"
                    style="@style/Widget.Material3.Button"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/deleteButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Eliminar"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/red"
                    android:textColor="@color/white"
                    android:layout_marginEnd="8dp"
                    style="@style/Widget.Material3.Button"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnImprimir"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Imprimir"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/red"
                    app:strokeWidth="1dp"
                    app:backgroundTint="@android:color/transparent"
                    android:textColor="@color/red"
                    android:layout_marginStart="8dp"
                    style="@style/Widget.Material3.Button.OutlinedButton"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>