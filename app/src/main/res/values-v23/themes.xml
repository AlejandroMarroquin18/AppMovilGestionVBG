<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.AppVBG" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Transparent system bars for edge-to-edge (API 23+). -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>

        <!-- Colores Material 3 -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryContainer">@color/red_light</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.AppVBG.NoActionBar" parent="Theme.AppVBG">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>