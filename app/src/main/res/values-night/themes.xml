<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema principal para modo noche -->
    <style name="Theme.AppVBG" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/red_dark</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/red_light</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Para botones -->
        <item name="materialButtonStyle">@style/Widget.App.Button.Night</item>
    </style>

    <!-- Estilo para botones en modo noche -->
    <style name="Widget.App.Button.Night" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/red_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.App.Button.Outlined.Night" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/red_dark</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/red_dark</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="Theme.AppVBG.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>