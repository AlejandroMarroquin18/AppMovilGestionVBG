<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppVBG"

        tools:targetApi="31">

        <!-- Splash Activity (nueva activity principal) -->
        <activity

            android:name=".splashactivity.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AppVBG.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Activity (ahora secundaria) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppVBG.NoActionBar">
        </activity>


        <!-- LoginActivity -->
        <activity
            android:name=".loginactivity.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.AppVBG.NoActionBar" />


    </application>
</manifest>